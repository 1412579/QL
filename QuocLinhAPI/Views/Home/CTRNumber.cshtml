@using BUS
@model TrickAvarage
@{
}

@section css{
    

}

@section js{
    
}

<div class="right_col" role="main" style="min-height: 3539px;">
    <div class="">
        <div class="clearfix"></div>
        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>Chỉnh hệ số CTR</h2>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content form-horizontal">
                        <br>
                        <form method="post" class="form">
                            @Html.HiddenFor(x=>x.TrickAvarageId)
                            <div class="form-group">
                                <label class="control-label col-md-2 col-sm-2 col-xs-12" for="last-name">
                                    Hệ số<span class="required">*</span>
                                </label>
                                <div class="col-md-4 col-sm-4 col-xs-12">
                                    @Html.EditorFor(x => x.Value, new { htmlAttributes = new { @class = "form-control col-md-7 col-xs-12", @required = "required", @type = "number" } })
                                    <small class="text text-danger" id="userMsg"></small>
                                </div>
                            </div>
                            @if(ViewBag.Ok != null)
                            {
                                <div class="alert alert-success">
                                    @ViewBag.Ok
                                </div>
                            }
                            <div class="ln_solid"></div>
                            <div class="form-group">
                                <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
                                    <button type="submit" class="btn btn-success">Sửa hệ số</button>
                                </div>
                            </div>
                            </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
