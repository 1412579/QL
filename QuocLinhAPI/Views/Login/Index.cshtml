<body class="login">
    <div>
        <a class="hiddenanchor" id="signup"></a>
        <a class="hiddenanchor" id="signin"></a>
        <div class="login_wrapper">
            <div class="animate form login_form">
                <section class="login_content">
                    <form method="post" class="form">
                        <h1>Đăng nhập</h1>
                        <input type="hidden" name="requestpath" id="requestpath" value="@ViewBag.RequestPath" />
                        <div>
                            <input type="text" class="form-control" name="username" id="username" placeholder="Tên đăng nhập" required />
                        </div>
                        <div>
                            <input type="password" class="form-control" placeholder="Mật khẩu" required name="password" id="password" />
                        </div>
                        <div>
                            <input class="btn btn-default submit" type="submit" value="Đăng nhập">
                            @*<a class="reset_pass" href="#">Lost your password?</a>*@
                        </div>
                        <div class="alert alert-danger hide" id="msgError">

                        </div>
