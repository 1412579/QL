                    }
                    else {
                        alert('Đã cập nhật API thành công.');
                        reloadLisstApi(UserId);
                        //location.reload(false);
                        //window.location.href = '/';
                    }
                },
                fail: function (xhr, textStatus, errorThrown) {
                    alert('Đã xảy ra lỗi, vui lòng thử lại sau.');
                }
            });
        }


