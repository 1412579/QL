            var containerMsg = $('#econtainerMsg').text('');
            var flag = false;

            //if (!username) {
            //    userMsg.text("Vui lòng nhập tài khoản.");
            //    flag = true;
            //}
            if (!Token) {
                tokenMsg.text("Vui lòng nhập Token.");
                flag = true;
            }
            if (!Container) {
                containerMsg.text("Vui lòng nhập Inventory/App.");
                flag = true;
            }
            if (!UserIdAPI && TypeAPI == 0) {
