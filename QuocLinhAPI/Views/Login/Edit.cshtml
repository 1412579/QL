        function Confirm(text, event) {
            var r = confirm(text);
            if (r == false) {
                event.preventDefault();
            }
        }
        $(document).ready(function () {
            $('#TypeAPI').change(function () {
                if ($(this).val() == 0) {
                    $('#useridapi').show();
                }
                else {
                    $('#useridapi').hide();
                }
            })
            $('#eTypeAPI').change(function () {
                if ($(this).val() == 0) {
