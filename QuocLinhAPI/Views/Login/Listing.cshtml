@using BUS
@model List<User>
@{
}

@section css{
    <link href="~/Content/vendors/datatables.net-bs/css/dataTables.bootstrap.min.css" rel="stylesheet">
}

@section js{
    <script src="~/Content/vendors/datatables.net/js/jquery.dataTables.min.js"></script>
    <script src="~/Content/vendors/datatables.net-bs/js/dataTables.bootstrap.min.js"></script>
    <script>
        $('#listing').dataTable();
    </script>
}

<div class="right_col" role="main" style="min-height: 3771px;">
    <div class="">
        <div class="page-title">
            <div class="title_left">
                <h3>User</h3>
            </div>
        </div>

        <div class="clearfix"></div>
        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>Danh sách tài khoản</h2>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        <table id="listing" class="table table-striped table-bordered bulk_action">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Tên tài khoản</th>
                                    <th>Loại tài khoản</th>
                                    <th>Thao tác</th>
                                </tr>
                            </thead>

                            <tbody>
                                @if (Model != null)
                                {
                                    foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@item.UserId</td>
                                            <td>@item.UserName</td>
                                            <td>@(item.Role == 1 ? "Admin" : "Người dùng")</td>
                                            <td>@Html.ActionLink("Sửa", "Edit", "Login", new { userid = item.UserId } ,new { @class="btn btn-primary" })</td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
